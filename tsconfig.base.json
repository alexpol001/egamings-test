{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@egamings/frontend/server-module": [
        "apps/frontend/src/app/app.server.module.ts"
      ],
      "@egamings/shared/common": ["libs/shared/common/src/index.ts"],
      "@egamings/nest-api/shell": ["libs/nest-api/shell/src/index.ts"],
      "@egamings/ng-mobile/shell": ["libs/ng-mobile/shell/src/index.ts"],
      "@egamings/ng-frontend/shell": ["libs/ng-frontend/shell/src/index.ts"],
      "@egamings/shared/client/ng-data-access": [
        "libs/shared/client/ng-data-access/src/index.ts"
      ],
      "@egamings/shared/client/ng-feature-main": [
        "libs/shared/client/ng-feature-main/src/index.ts"
      ],
      "@egamings/shared/client/ng-ui": [
        "libs/shared/client/ng-ui/src/index.ts"
      ],
      "@egamings/shared/client/ng-utils": [
        "libs/shared/client/ng-utils/src/index.ts"
      ],
      "@egamings/shared/client/common": [
        "libs/shared/client/common/src/index.ts"
      ],
      "@egamings/nest-redis/shell": ["libs/nest-redis/shell/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
