{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@egamings/frontend/server-module": [
        "apps/frontend/src/app/app.server.module.ts"
      ],
      "@egamings/a-webpack": [
        "libs/a-webpack/src/index.ts"
      ],
      "@egamings/nest-api/feature-main": [
        "libs/nest-api/feature-main/src/index.ts"
      ],
      "@egamings/nest-ms-mongo/feature-main": [
        "libs/nest-ms-mongo/feature-main/src/index.ts"
      ],
      "@egamings/nest-ms-redis/feature-main": [
        "libs/nest-ms-redis/feature-main/src/index.ts"
      ],
      "@egamings/nest-ms-rabbit/feature-main": [
        "libs/nest-ms-rabbit/feature-main/src/index.ts"
      ],
      "@egamings/shared/domain": [
        "libs/shared/domain/src/index.ts"
      ],
      "@egamings/shared/ng/data-access": [
        "libs/shared/ng/data-access/src/index.ts"
      ],
      "@egamings/shared/ng/feature-main": [
        "libs/shared/ng/feature-main/src/index.ts"
      ],
      "@egamings/shared/ng/ui": [
        "libs/shared/ng/ui/src/index.ts"
      ],
      "@egamings/shared/ng/environment": [
        "libs/shared/ng/environment/src/index.ts"
      ],
      "@egamings/shared/ng/utils": [
        "libs/shared/ng/utils/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
