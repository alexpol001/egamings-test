{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@egamings/frontend/server-module": [
        "apps/frontend/src/app/app.server.module.ts"
      ],
      "@egamings/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@egamings/shared/ng/feature-main": [
        "libs/shared/ng/feature-main/src/index.ts"
      ],
      "@egamings/shared/ng/ui": ["libs/shared/ng/ui/src/index.ts"],
      "@egamings/ng-frontend/shell": ["libs/ng-frontend/shell/src/index.ts"],
      "@egamings/ng-mobile/shell": ["libs/ng-mobile/shell/src/index.ts"],
      "@egamings/shared/ng/data": ["libs/shared/ng/data/src/index.ts"],
      "@egamings/nest-ms-mongo/shell": [
        "libs/nest-ms-mongo/shell/src/index.ts"
      ],
      "@egamings/nest-api/shell": ["libs/nest-api/shell/src/index.ts"],
      "@egamings/nest-ms-rabbit/shell": [
        "libs/nest-ms-rabbit/shell/src/index.ts"
      ],
      "@egamings/nest-ms-redis/shell": [
        "libs/nest-ms-redis/shell/src/index.ts"
      ],
      "@egamings/nest-ms-mongo/services": [
        "libs/nest-ms-mongo/services/src/index.ts"
      ],
      "@egamings/nest-ms-mongo/ui": ["libs/nest-ms-mongo/ui/src/index.ts"],
      "@egamings/nest-ms-rabbit/services": [
        "libs/nest-ms-rabbit/services/src/index.ts"
      ],
      "@egamings/nest-ms-rabbit/ui": ["libs/nest-ms-rabbit/ui/src/index.ts"],
      "@egamings/nest-ms-redis/ui": ["libs/nest-ms-redis/ui/src/index.ts"],
      "@egamings/nest-ms-redis/services": [
        "libs/nest-ms-redis/services/src/index.ts"
      ],
      "@egamings/nest-api/ui": ["libs/nest-api/ui/src/index.ts"],
      "@egamings/extra/webpack": ["libs/extra/webpack/src/index.ts"],
      "@egamings/shared/ng/services": ["libs/shared/ng/services/src/index.ts"],
      "@egamings/shared/nest/db-mongo": [
        "libs/shared/nest/db-mongo/src/index.ts"
      ],
      "@egamings/shared/nest/db-postgres": [
        "libs/shared/nest/db-postgres/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
